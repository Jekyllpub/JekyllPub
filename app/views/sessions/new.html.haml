- provide(:title, "Log in | Jekyll Pub")
.row
  .medium-6.medium-offset-3.columns
    %h1.text-center Log In
    - if flash[:alert]
      .alert-box.alert.radius(data-alert)
        = flash[:alert]
        %a.close{href: "#"} &times;
    = form_for(:session, url: root_path) do |f|
      = f.label :username
      = f.text_field :username
      = f.label :password
      = f.password_field :password
      = f.submit "Log In", class: "button radius right"
    = link_to "Sign Up", signup_path